<div class="row">
  <div class="col-lg-6 col-md-9 col-12 mx-auto">
    <div class="row mb-3">
      <h1 class="fw-light">
        Welcome to the HPI Compass Portal<%= ", #{current_user.username}" if user_signed_in? && current_user.username.present? %>!
      </h1>
    </div>
    <%= form_with url: search_path, method: :get do |form| %>
      <div class="row align-items-end mb-3">
        <div class="col">
          <div class="form-group">
            <%= form.label :query, "Search", class: 'form-label' %>
            <%= form.text_field :query, class: 'form-control', autofocus: true, id: "search", :oninput => { get: search_path } %>
          </div>
        </div>
        <div class="col-auto">
          <%= form.submit "Search", class: 'btn btn-primary' %>
        </div>
      </div>
      <div class="row">
        <% if @query %>
          <div class="list-group">
            <% @query.each do |result|%>
                <a href="#" class="list-group-item list-group-item-action" ><%= result %></a>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>