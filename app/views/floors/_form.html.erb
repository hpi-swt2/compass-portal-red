<%= form_with(model: floor) do |form| %>
  <% if floor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(floor.errors.count, "error") %> prohibited this floor from being saved:</h2>

      <ul>
        <% floor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

<div class="field">
  <%= form.label :building %>
  <%= form.select 'building_id',
    options_from_collection_for_select(Building.all, :id, :name, floor.building_id),
    {},
    multiple: false, size: 10 %>
</div>

<div class="field">
  <%= form.label :rooms %>
  <%= form.select 'room_ids',
    options_from_collection_for_select(Room.all, :id, :name, floor.room_ids),
    {},
    multiple: true, size: 10 %>
</div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
