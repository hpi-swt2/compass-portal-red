<%# Point of Interest Popup %>
<div class="map-popup card shadow-sm p-2" id="poi_popup" style="display: none;">
  <div class="card-body">
    <div class="card-heading d-flex flex-row mb-4 justify-content-between">
      <div class="d-flex flex-row">
        <div class="mx-3">
          <h2 id="poi_popup_name"></h2>
          <span class="badge bg-primary">point of interest</span>
        </div>
      </div>
      <div class="d-flex flex-row">
        <div id="poi_popup_description"></div>
      </div>
      <span class=" d-flex flex-column justify-content-start align-items-center" title="close">
            <button
              class="btn bg-transparent fw-bold"
              onclick="document.getElementById('poi_popup').style.display = 'none'"
            >ðŸ—™
            </button>
        </span>
    </div>

    <div class="d-flex flex-row justify-content-start iconbuttons">
      <%= link_to render('partials/iconbutton', :locals => {:text => 'Detailpage', :icon_class => 'fa-list', :id => "details_btn"}), point_of_interest_path(0) %>
      <%= render('partials/iconbutton', :locals => {:text => 'Navigate', :icon_class => 'fa-location-arrow', :id => "navigate_btn"}) %>
    </div>
  </div>

</div>