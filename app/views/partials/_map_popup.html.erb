<div class="map-popup card shadow-sm p-2">
  <div class="card-body">
    <div class="card-heading d-flex flex-row mb-4">
        <span class="picture-dot d-flex flex-column justify-content-center align-items-center">
            <% if locals[:room].image %>
                <img src="<%=locals[:room].image %>">
            <% else %>
                <i class="far fa-building fa-2x"></i>
            <% end %>
        </span>

        <div class="mx-3">
            <h2><%= locals[:room].display_name %></h2>

            <% locals[:room].tags.each do |tag| %>
                <span class="badge bg-primary"><%= tag.name %></span>
            <% end %>
        </div>
    </div>
    
    <div class="d-flex flex-row justify-content-around">
        <%= render 'partials/iconbutton', :locals => {:text => 'Detailpage', :icon_class => 'fa-list'} %>
        <%= render 'partials/iconbutton', :locals => {:text => 'Navigate', :icon_class => 'fa-location-arrow'} %>
    </div>
  </div>
</div>