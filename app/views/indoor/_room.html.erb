<g class="outer-shape">
    <%= render 'polygon', 
        polyline: room.outer_shape
    %>
</g>
<g class="walls">
    <% room.walls.each  do |wall| %>
        <%= render 'polyline',
            polyline: wall.polyline
        %>
    <% end %>
</g>
<g class="points-of-interest">
    <% room.point_of_interests.each  do |point_of_intereset| %>
        <%= render 'point',
            point: point_of_intereset.point
        %>
    <% end %>
</g>