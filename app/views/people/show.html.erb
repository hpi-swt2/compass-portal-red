<div class="row mb-4">
  <div class="col-sm-4 col-lg-2">
    <img src= "<%= @person.image %>" class="rounded-circle" >
  </div>

  <div class="col-sm-8 col-lg-10">
    <h1>
      <%= @person.full_name %>
    </h1>
    <p>
      <span class="detail-tag p-1"><%= @person.status %></span>
    </p>
  </div>
</div>

<div class='detail'>
  <div class='row mb-4'>
    <div class='col-3'> <img src= "<%= @person.image %>" class="rounded-circle"> </div>
    <div class='col'> <%= @person.full_name %> </div>
  </div>
  <div class='row'>
    <div class='col-3'> email </div>
    <div class='col'> <%= @person.email %> </div>
  </div>
  <% @person.informations.each do |information| %>
    <div class='row'>
      <div class='col-3'>
        <%= information.key %>
      </div>
      <div class='col'>
        <%= information.value %>
      </div>
    </div>
  <% end %>
  <% if @person.room %>
    <div class='row'>
      <div class='col-3'> room </div>
      <div class='col'> <%= link_to(@person.room.display_name, room_path(@person.room)) %> </div>
    </div>
  <% end %>
</div>

<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
