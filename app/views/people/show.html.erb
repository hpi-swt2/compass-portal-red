<p id="notice"><%= notice %></p>
<div class='detail'>
  <div class='row mb-4'>
    <div class='col-3'> <img src= "<%= @person.image %>" class="rounded-circle"> </div>
    <div class='col'> <%= @person.full_name %> </div>
  </div>
  <div class='row'>
    <div class='col-3'> email </div>
    <div class='col'> <%= @person.email %> </div>
  </div>
  <% @person.informations.each do |information| %>
    <div class='row'>
      <div class='col-3'>
        <%= information.key %>
      </div>
      <div class='col'>
        <%= information.value %>
      </div>
    </div>
  <% end %>
  <% if @person.room %>
    <div class='row'>
      <div class='col-3'> room </div>
      <div class='col'>
        <%= link_to room_path(@person.room), class: "btn btn-with-img" do %>
          <%= image_tag(@person.room.image, class: "btn-img") %>
          <%= @person.room.display_name %>
        <% end %>
      </div>
    </div>
  <% end %>
  <% if @person.chairs %>
    <div class='row'>
      <div class='col-3'> chair </div>
      <div class='col'>
        <% @person.chairs.each do |chair| %>
        <div class="mb-2">
          <%= link_to chair_path(chair), class: "btn btn-with-img" do %>
            <i class="fas fa-book btn-img"></i>
            <%= chair.name %>
          <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
  <% if @person.status %>
    <div class='row'>
      <div class='col-3'> status </div>
      <div class='col'> <%= @person.status %> </div>
    </div>
  <% end %>
</div>
<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
