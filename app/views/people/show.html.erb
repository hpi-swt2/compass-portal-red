<div class="row mb-4">
  <div class="col-sm-4 col-lg-2">
    <img src= "<%= @person.image %>" class="rounded-circle" >
  </div>

  <div class="col-sm-8 col-lg-10">
    <h1>
      <%= @person.full_name %>
    </h1>
    <p>
      <span class="detail-tag p-1"><%= @person.status %></span>
    </p>
  </div>
</div>

<%# Only show room when room is not nil %>
<% if @person.room %>
  <p>
    <strong>Room:</strong>
    <%= @person.room.display_name %>
  </p>
<% end %>

<p>
  <strong>Email:</strong>
  <%= @person.email %>
</p>

<% @person.informations.each do |information| %>
<p>
  <strong><%= information.key %>:</strong>
  <%= information.value %>
</p>
<% end %>


<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
