    <%= form.label :email %>
    <%= form.text_field :email, style: "background-color:#{form_color("email", @params)}" %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.text_field :image, style: "background-color:#{form_color("image", @params)}" %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.text_field :status, style: "background-color:#{form_color("status", @params)}" %>
