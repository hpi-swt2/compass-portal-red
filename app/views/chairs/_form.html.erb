<%= form_with(model: chair) do |form| %>
  <% if chair.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(chair.errors.count, "error") %> prohibited this chair from being saved:</h2>

      <ul>
        <% chair.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :people %>
    <%= form.select 'person_ids',
      options_from_collection_for_select(Person.all, :id, :name, chair.person_ids),
      {},
      multiple: true, size: 10 %>
  </div>

  <div class="field">
    <%= form.label :rooms %>
    <%= form.select 'room_ids',
      options_from_collection_for_select(Room.all, :id, :full_name, chair.room_ids),
      {},
      multiple: true, size: 10 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
