<% content_for :title, "Point of Interest #{@point_of_interest.name}" %>
<div class='detail'>
  <div class="row mb-3">
    <div class="col-3">
      <%= image_tag(@point_of_interest.image_or_placeholder, class: "picture-rounded") %>
    </div>
    <div class="col">
      <h1>
        <%= @point_of_interest.name %>
      </h1>
    </div>
    </div>
    <div class="d-flex flex-row justify-content-start iconbuttons mb-3">
      <%= link_to render('partials/iconbutton', :locals => {:text => 'Show on map', :icon_class => 'fa-map', :margin => 'me-4', :id => "show_on_map_btn"}), map_path(:point_of_interest_id => @point_of_interest.point_id) %>
      <%= link_to render('partials/iconbutton', :locals => {:text => 'Navigate', :icon_class => 'fa-location-arrow', :id => "navigate_btn"}), root_path %>
  </div>
  <% if @point_of_interest.description %>
    <div class='row'>
      <div class='col-3'> description </div>
      <div class='col'>
        <%= @point_of_interest.description %>
      </div>
    </div>
  <% end %>
</div>
<%= link_to 'Back', point_of_interests_path %>
