<div class="map-popup card shadow-sm p-2" id="room_popup">
  <div class="card-body">
    <div class="card-heading d-flex flex-row mb-4 justify-content-between">
        <div class="d-flex flex-row">
            <span class="icon-dot d-flex flex-column justify-content-center align-items-center">
                <i class="far fa-building fa-2x"></i>
            </span>

            <div class="mx-3">
                <h2><%= @selected_room.name %></h2>
                <span class="badge bg-primary">room</span> 
                <% @selected_room.tags.each do |tag| %>
                    <span class="badge bg-primary"><%= tag.name %></span>
                <% end %>
            </div>
        </div>
        <span class=" d-flex flex-column justify-content-start align-items-center" title="close">
            <button
            class="btn bg-transparent fw-bold"
            onclick="document.getElementById('room_popup').style.display = 'none'"
            >ðŸ—™
            </button>
        </span>
    </div>
    
    <div class="d-flex flex-row justify-content-start iconbuttons">
        <%= link_to render('partials/iconbutton', :locals => {:text => 'Detailpage', :icon_class => 'fa-list', :id => "details_btn"}), room_path(@selected_room) %>
        <%= render('partials/iconbutton', :locals => {:text => 'Navigate', :icon_class => 'fa-location-arrow', :id => "navigate_btn"}) %>
    </div>
  </div>
  
</div>